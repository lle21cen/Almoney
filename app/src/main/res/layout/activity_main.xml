<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8405e6"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_title_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:paddingRight="10dp">

        <TextView
            android:textSize="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계좌 개설하기"
            android:textColor="#ffffff" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="24dp"
            android:layout_gravity="right|center"
            android:layout_height="24dp"
            android:src="@drawable/alarm" />
    </LinearLayout>

    <TextView
        android:id="@+id/main_welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_below="@+id/main_title_layout"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_border_white"
        android:gravity="center"
        android:text="알머니에 오신 것을 환영합니다!&#160;거래를 위해 새 계좌를 등록하여 주시기 바랍니다."
        android:textAlignment="center"
        android:textColor="#7401ae"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/main_back_choice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_welcome_text"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="은행 선택"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/main_bank_text"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_border_white_purple_solid" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_drop_down_white_24dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_back_choice_layout"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계좌 입력"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/main_account_text"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:background="@drawable/round_border_white_purple_solid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="직접입력"
                android:textColor="#d9d9d9"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/main_confirm_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:text="확인"
        android:textAlignment="center"
        android:textColor="#7401ae" />

</RelativeLayout>