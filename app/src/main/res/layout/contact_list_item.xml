<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#8405e6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/contact_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/person_in_circle" />

    <LinearLayout
        android:layout_toRightOf="@+id/contact_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:text="구지훈"
            android:textColor="#ffffff"
            android:id="@+id/contact_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="010-5611-5297"
            android:textColor="#ffffff"
            android:id="@+id/contact_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>